<div class="search-bar ">
  <span class="material-symbols-rounded leading-icon">search</span>
  <img
    src="/images/logo.svg"
    alt="Soundfy logo"
    width="97"
    height="24"
    class="logo"
    data-logo
  />

  <form action="/search" method="post" class="search-form">
    <label for="search" class="sr-only"></label>

    <input
      type="text"
      name="query"
      id="search"
      value="<%=locals.query%>"
      placeholder="Que quieres escuchar?"
      class="search-field body-large"
      required
      data-search-field
    />
  </form>
  <% 
  const { url = '/images/avatar.png', width = 30, height = 30 } = 
  locals.images.find( item => item.width === 64 || {}) 
  %>

  <div class="menu-wrapper" data-menu-wrapper>
    <button
      class="icon-btn"
      aria-label="My profile"
      data-menu-toggler
      data-ripple
    >
      <img
        src="<%=url%>"
        width="<%=width%>"
        height="<%=height%>"
        alt="<%=locals.display_name%> profile"
        class="avatar"
      />
      <div class="state-layer"></div>
    </button>

    <%- include('./menu') %>
  </div>

  <%- include('./icon_btn' ,{
    variant: 'clear',
    icon: 'close',
    dataAttr: 'data-search-clear'
  })%>

</div>
